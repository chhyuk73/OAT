<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="oval">
		    <gradient
			    android:startColor="#22FFB2F5"
			    android:endColor="#66FFB2F5"
			    android:gradientRadius="80"
			    android:type="radial"/>
		    <stroke 
		        android:width="2px"
		        android:color="#BDBDBD"/>
		</shape>
    </item>
    
    <item>
        <shape android:shape="oval">
		    <gradient
			    android:startColor="#22FFE08C"
			    android:endColor="#ffFFE08C"
			    android:gradientRadius="80"
			    android:type="radial"/>
		    <stroke 
		        android:width="2px"
		        android:color="#BDBDBD"/>
		</shape>
    </item>
</selector>
