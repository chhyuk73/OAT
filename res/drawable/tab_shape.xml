<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item 
        android:state_pressed="true">
        <shape 
            android:shape="oval">
		    <stroke
		        android:color="#B2EBF4"
		        android:width="2dp"/>
			    <corners
			        android:radius="10dp"/>
		</shape>
    </item>
    
    <item 
        android:state_selected="true">
        <shape 
            android:shape="oval">
		    <stroke
		        android:color="#B2CCFF"/>
		        <corners
		            android:radius="10dp"/>
        </shape>
    </item>

</selector>
